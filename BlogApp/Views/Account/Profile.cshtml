@{
	ViewData["Title"] = "Profile";
}


<div class="row">
	<div class="col-4 offset-4">
		<h1 class="display-4 border-bottom text-center pb-2">Profil</h1>
	</div>
</div>

<div class="row mt-4">
	<div class="col-6 offset-6 my-3">
		<div class="mb-4">
			<div asp-validation-summary="All" class="text-danger small"></div>
		</div>
	</div>

	<div class="col-6">
		<form method="post" asp-action="ProfileChangeImage" enctype="multipart/form-data">
			<div class="text-center mb-3">
				<img src="~/uploads/@ViewData["ProfileImage"]" width="128" class="img-thumbnail rounded-circle" />
			</div>
			<div class="form-group mb-3">
				<label class="form-label small">
					Profil Fotoğrafı
					<span class="badge bg-danger ms-2">Gerekli Alan</span>
				</label>
				<input type="file" name="file" class="form-control" accept=".jpg" />
				<div class="small">
					<span class="small text-secondary">
						<i class="fa fa-info-circle me-2"></i>Sadece .jpg formatı
					</span>
				</div>
				<div class="text-center mt-3">
					<button class="btn btn-primary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Kaydet</button>
				</div>
			</div>
		</form>
	</div>

	<div class="col-6">
		<div>
			<h2>Ayarlar</h2>
			<hr />
		</div>

		<form method="post" asp-action="ProfileChangeFullName">
			<div class="form-group">
				<label class="form-label small">
					Ad Soyad
					<span class="badge bg-danger ms-2">Gerekli Alan</span>
				</label>
				<div class="input-group mb-3">
					<input name="fullname" type="text" class="form-control" placeholder="Ad Soyad" value="@ViewData["FullName"]">
					<button class="btn btn-primary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Kaydet</button>
				</div>
			</div>
		</form>

		<form method="post" asp-action="ProfileChangePassword">
			<div class="form-group">
				<label class="form-label small">
					Yeni Şifre
					<span class="badge bg-danger ms-2">Gerekli Alan</span>
				</label>
				<div class="input-group">
					<input name="password" type="password" class="form-control" placeholder="*********">
					<button class="btn btn-primary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Kaydet</button>
				</div>
				@if (ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
				{
					<span class="text-success small">Password updated.</span>
				}
			</div>
		</form>


	</div>
</div>